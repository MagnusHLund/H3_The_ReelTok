{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Videos Service)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder:ReelTok Videos API}/bin/Debug/net8.0/VideosServiceApi.dll",
      "args": [],
      "cwd": "${workspaceFolder:ReelTok Videos API}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder:ReelTok Videos API}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
